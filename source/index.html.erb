<div class="container mt-5">
  <div class="col text-center">
    <div class="links">
      <a href="https://www.linkedin.com/in/jossdixon/" target="blank"><i class="fab fa-linkedin fa-2x"></i></a>
      <a href="https://github.com/jossdixon"><i class="fab fa-github-square fa-2x"></i></a>
      <% link_to '/contact.html', :relative => true do %>
        <i class="fas fa-envelope-square fa-2x"></i>
      <% end %>
    </div>
    <img src="assets/images/me_pro.jpg" class="avatar-square">
    <div class="container p-3">
      <h1>Hello there, I'm Joss Dixon.</h1>
      <p>I'm a programmer from the UK, and here are a few things I've made.</p>
    </div>
  </div>
</div>
</div>
<div class="row d-flex justify-content-center">
  <ul class="nav tabs-underlined" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="active tab-underlined" id="rails-tab" data-toggle="tab" href="#rails" role="tab" aria-controls="rails" aria-selected="true">Rails</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="tab-underlined" id="react-vue-tab" data-toggle="tab" href="#react-vue" role="tab" aria-controls="react-vue" aria-selected="false">React/Vue</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="tab-underlined" id="js30-tab" data-toggle="tab" href="#js30" role="tab" aria-controls="js30" aria-selected="false">JS30</a>
    </li>
  </ul>
</div>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade py-3 show active" id="rails" role="tabpanel" aria-labelledby="rails-tab">
    <div class="container">
      <% data.products.each do |product|  %>
        <% if product.category == 'rails' %>
          <div class="card-trip">
            <img src="<%= image_path(product.image)%>">
            <div class="card-trip-infos">
              <div>
                <h2><%= product.name %></h2>
                <p><%= product.description %></p>
              </div>
              <% link_to product.url, class: 'external-link', target: 'blank' do %>
                <i class="fas fa-bullseye"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade py-3" id="react-vue" role="tabpanel" aria-labelledby="react-vue-tab">
    <div class="container">
      <% data.products.each do |product|  %>
        <% if (product.category == 'react') || (product.category == 'vue') %>
          <div class="card-trip">
            <img src="<%= image_path(product.image)%>">
            <div class="card-trip-infos">
              <div>
                <h2><%= product.name %></h2>
                <p><%= product.description %></p>
              </div>
              <% link_to product.url, class: 'external-link', target: 'blank' do %>
                <i class="fas fa-bullseye"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade py-3" id="js30" role="tabpanel" aria-labelledby="js30-tab">
    <div class="container">
      <% data.products.each do |product|  %>
        <% if product.category == 'js30' %>
          <div class="card-trip">
            <img src="<%= image_path(product.image)%>">
            <div class="card-trip-infos">
              <div>
                <h2><%= product.name %></h2>
                <p><%= product.description %></p>
              </div>
              <% link_to product.url, class: 'external-link', target: 'blank' do %>
                <i class="fas fa-bullseye"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
</div>
